<WidgetsExample@GridLayout>:
    cols: 3
    ToggleButton:
        text: "toggle"
        on_state: root.on_toggle_button_state(self)

    Button:
        text:"click here"
        on_press: root.on_button_press()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "C:/Users/48507/PycharmProjects/calendar/RESOURCES_KIVY/1_THE_LAB/2_the_lab_widgets/fonts/Lcd.ttf"
        font_size: "80dp"

    Switch:
        id: my_switch
        disabled: False
        on_active: root.on_switch_active(self)
        active: True
    Slider:
        id: slider
        min: 0
        max: 100
        value: 50
        orientation: "vertical"
        #on_value: root.on_slider_value(self)
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(slider.value))
        ProgressBar:
            max: 100
            value: slider.value
    TextInput:
        id: my_input
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_input



